<p id="notice"><%= notice %></p>
<% if current_user && current_user.is_admin %>
<h1>Пользователи</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Имя пользователя</th>
      <th>Администратор</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Показать', user %></td>
        <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
        <td><%= link_to 'Удалить', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый пользователь', new_user_path %>
<% end %>